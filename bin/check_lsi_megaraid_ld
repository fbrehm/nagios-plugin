#!/usr/bin/python
# -*- coding: utf-8 -*-
"""
@author: Frank Brehm
@contact: frank.brehm@profitbricks.com
@copyright: © 2010 - 2015 by Frank Brehm, Berlin
@summary: Nagios plugin ≡ check script to check the state
          of a Logical Drive of a LSI MegaRaid adapter.
"""

# Standard modules
import os
import sys

# Third party modules

# Mangeling import path
libdir = os.path.abspath(os.path.join(os.path.dirname(sys.argv[0]), '..'))
ndir = os.path.join(libdir, 'nagios')
base_module = os.path.join(ndir, '__init__.py')
if os.path.isdir(ndir) and os.path.isfile(base_module):
    sys.path.insert(0, libdir)
del libdir
del ndir
del base_module

# Own modules

try:
    from nagios.plugins.check_megaraid_ld import CheckMegaRaidLdPlugin
except ImportError as e:
    sys.stderr.write("Import error.\n")
    print(str(e))
    sys.exit(3)

plugin = CheckMegaRaidLdPlugin()
plugin()

# =============================================================================

